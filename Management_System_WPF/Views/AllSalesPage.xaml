<Page x:Class="Management_System_WPF.Views.AllSalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <!-- MAIN FULL PAGE GRID -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <!-- MAIN WHITE PANEL (FULL SIZE LIKE OTHER PAGES) -->
        <Border Background="#F9FFFFFF"
                CornerRadius="20"
                Padding="30"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- BACK BUTTON -->
                <Button Content="⟵ Back"
                        Width="120"
                        Height="40"
                        Background="#3CB4A7"
                        Foreground="White"
                        FontSize="18"
                        HorizontalAlignment="Left"
                        Click="Back_Click"
                        Margin="0,0,0,10"/>

                <!-- TITLE -->
                <TextBlock Grid.Row="1"
                           Text="Sale List"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

                <!-- SALES GRID -->
                <DataGrid x:Name="dgSales"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          FontSize="16"
                          RowHeight="40"
                          Background="White"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Customer Name" Binding="{Binding BuyerName}" Width="*" />
                        <DataGridTextColumn Header="Article Name" Binding="{Binding ItemName}" Width="*" />
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="120"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="150"/>
                        <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate}" Width="150"/>

                        <DataGridTemplateColumn Header="Edit" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="40"
                                            Height="32"
                                            Background="#3CB4A7"
                                            Click="Options_Click">
                                        <Path Data="M12,2 L14,4 L6,12 L4,12 L4,10 Z"
                                              Fill="White"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</Page>
