<Window x:Class="Management_System_WPF.Views.EditSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Sale"
        Height="300"
        Width="350"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20">

        <TextBlock Text="Customer"/>
        <TextBox x:Name="txtBuyer" IsReadOnly="True"/>

        <TextBlock Text="Item" Margin="0,10,0,0"/>
        <TextBox x:Name="txtItem" IsReadOnly="True"/>

        <TextBlock Text="Quantity" Margin="0,10,0,0"/>
        <TextBox x:Name="txtQty"/>

        <Button Content="Save"
                Height="35"
                Margin="0,20,0,0"
                Click="Save_Click"/>
    </StackPanel>
</Window>
