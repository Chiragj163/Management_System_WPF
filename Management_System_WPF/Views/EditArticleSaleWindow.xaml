<Window x:Class="Management_System_WPF.Views.EditArticleSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Article Sale"
        Height="260"
        Width="360"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20">

        <TextBlock Text="Article"/>
        <TextBox x:Name="txtArticle" IsReadOnly="True"/>

        <TextBlock Text="Date" Margin="0,10,0,0"/>
        <TextBox x:Name="txtDate" IsReadOnly="True"/>

        <TextBlock Text="Quantity" Margin="0,10,0,0"/>
        <TextBox x:Name="txtQty"/>

        <Button Content="Save"
                Height="35"
                Margin="0,20,0,0"
                Click="Save_Click"/>
    </StackPanel>
</Window>
