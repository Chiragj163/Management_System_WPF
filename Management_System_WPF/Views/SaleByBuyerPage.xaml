<Page x:Class="Management_System_WPF.Views.SaleByBuyerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- TOP BUTTON ROW -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">

            <Button Content="⟵ Back"
                    Width="100" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Back_Click"/>

            <Button x:Name="btnPrevMonth"
        Content="Show Previous Month Sales"
        Width="220"
        Height="35"
        Background="#3CB4A7"
        Foreground="White"
        Margin="5"
        Click="PrevMonth_Click"/>

            <Button x:Name="btnNextMonth"
        Content="Show Next Month Sales"
        Width="220"
        Height="35"
        Background="#3CB4A7"
        Foreground="White"
        Margin="5"
        Click="NextMonth_Click"/>



            <Button Content="Print"
                    Width="120" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Print_Click"/>

            <Button Content="Export Excel"
                    Width="140" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="ExportExcel_Click"/>
        </StackPanel>

        <!-- MONTH TITLE -->
        <TextBlock Grid.Row="1"
                   x:Name="txtTitle"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <!-- DATA GRID -->
        <DataGrid Grid.Row="2"
                  x:Name="dgBuyerSales"
                  AutoGenerateColumns="False"
                  FrozenColumnCount="1"
                  RowHeight="32"
                  FontSize="16"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

            <!-- HEADER STYLE -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3CB4A7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- CELL STYLE -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
            </DataGrid.CellStyle>

        </DataGrid>
    </Grid>
</Page>
