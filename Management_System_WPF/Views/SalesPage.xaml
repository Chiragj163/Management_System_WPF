<Page x:Class="Management_System_WPF.Views.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="20">
        

        <!-- MAIN WHITE PANEL -->
        <Border Background="#F9FFFFFF"
                CornerRadius="20"
                Padding="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="900">

            <StackPanel>
                <Button Content="✖"
        Width="35"
        Height="35"
        Background="#FF3CB4A7"
        Foreground="White"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,10,10,0"
        Click="ExitSalePage_Click"/>


                <!-- TITLE -->
                <TextBlock Text="ADD SALE"
                           FontSize="30"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"
                           Foreground="Black"/>

                <!-- MAIN CONTENT GRID -->
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT FORM SECTION -->
                    <StackPanel Grid.Column="0">

                        <!-- Select Buyer -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Select Buyer:" Width="120" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbBuyer"
                                      Width="250"
                                      Height="30"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Select Item/Article -->
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Select Article:" Width="120" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbItem"
                                      Width="250"
                                      Height="30"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Quantity -->
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Enter Quantity:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtQuantity"
                                     Width="250"
                                     Height="30"
                                     FontSize="14"/>
                        </StackPanel>

                        <!-- Date -->
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Select Date:" Width="120" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpSaleDate"
                                        Width="250"
                                        Height="30"
                                        FontSize="14"
                                        SelectedDateFormat="Short"/>
                        </StackPanel>

                        <!-- Calculate & Total -->
                        <StackPanel Orientation="Horizontal" Margin="0,20">
                            <Button Content="Calculate"
                                    Width="120"
                                    Height="35"
                                    Background="#FF3CB4A7"
                                    Foreground="White"
                                    Click="Calculate_Click"/>

                            <TextBlock Text="Total:"
                                       Margin="20,0,5,0"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>

                            <TextBlock x:Name="txtTotal"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20">
                            <Button Content="Save Sale"
                                    Width="120"
                                    Height="35"
                                    Background="#FF3CB4A7"
                                    Foreground="White"
                                    Click="SaveSale_Click"/>

                            <Button Content="Add to Cart"
                                    Width="120"
                                    Margin="20,0,0,0"
                                    Height="35"
                                    Background="#FF3CB4A7"
                                    Foreground="White"
                                    Click="AddToCart_Click"/>
                        </StackPanel>

                    </StackPanel>

                    <!-- CART SECTION -->
                    <Border Grid.Column="1"
                            Background="#E8F1F7"
                            CornerRadius="10"
                            Padding="20"
                            Margin="20,0,0,0">

                        <StackPanel>
                            <TextBlock Text="CART"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Margin="0,0,0,10"/>

                            <TextBlock x:Name="txtCartStatus"
                                       Text="Cart is empty!"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       Foreground="Black"/>

                        </StackPanel>

                    </Border>

                </Grid>

            </StackPanel>

        </Border>

    </Grid>
</Page>
