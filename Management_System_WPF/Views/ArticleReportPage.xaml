<Page x:Class="Management_System_WPF.Views.ArticleReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Management_System_WPF.Helpers"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Background="White">
    <Page.Resources>
        <local:DateOrTotalConverter x:Key="DateOrTotalConverter"/>
    </Page.Resources>



    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Sales Till Now -->
        </Grid.RowDefinitions>

        <!-- 🔷 TOP BUTTON ROW -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">

            <Button Content="⟵ Back"
                    Width="100" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Back_Click"/>

            <Button x:Name="btnPrevMonth"
                    Content="Show Previous Month Sales"
                    Width="220" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    FontSize="16"
                    Margin="5"
                    Click="PrevMonth_Click"/>

            <Button x:Name="btnNextMonth"
                    Content="Show Next Month Sales"
                    Width="220" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    FontSize="16"
                    Margin="5"
                    Click="NextMonth_Click"/>

            <Button Content="Print"
                    Width="120" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Print_Click"/>

            <Button Content="Export Excel"
                    Width="140" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="ExportExcel_Click"/>

            <Button Content="Edit"
                    Width="120" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Edit_Click"/>
        </StackPanel>

        <!-- 🔷 MONTH TITLE -->
        <TextBlock x:Name="txtTitle"
                   Grid.Row="1"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- 🔷 DATA GRID -->
        <DataGrid Grid.Row="2"
                  x:Name="dgArticles"
                  AutoGenerateColumns="False"
                  FrozenColumnCount="1"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  FontSize="18"
                  SelectionUnit="Cell"
                  SelectionMode="Single"
                  AlternationCount="2"
                  Background="White"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  SelectedCellsChanged="dgArticles_SelectedCellsChanged">

            <!-- HEADER STYLE -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3CB4A7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- CELL STYLE -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.CellStyle>


            <!-- ROW STYLE -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>

                        <!-- Alternate row color -->
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F3F9F9"/>
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D7EFEA"/>
                        </Trigger>

                        <!-- ✅ TOTAL ROW -->
                        <DataTrigger Binding="{Binding Date}" Value="{x:Static sys:DateTime.MinValue}">
                            <Setter Property="Background" Value="#004D40"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="19"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
           


        </DataGrid>
        <!-- 🔷 SALES TILL NOW -->
        <StackPanel Grid.Row="3" Margin="0,25,0,0">

            <!-- TITLE -->
            <TextBlock Text="Sales Till Now"
               FontSize="24"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

            <!-- DATA GRID -->
            <DataGrid x:Name="dgSalesTillNow"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              HeadersVisibility="Column"
              RowHeight="36"
              FontSize="16"
              IsReadOnly="True"
              AlternationCount="2"
              Background="White"
              BorderBrush="#DDD"
              BorderThickness="1"
              HorizontalAlignment="Stretch">

                <!-- 🔹 HEADER STYLE -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#004D40"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- 🔹 CELL STYLE (THIS FIXES CENTER ISSUE) -->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    </Style>
                </DataGrid.CellStyle>

                <!-- 🔹 ROW STYLE -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F3F9F9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <!-- 🔹 COLUMNS -->
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Article"
                                Binding="{Binding Article}"
                                Width="*"/>

                    <DataGridTextColumn Header="Total Qty"
                                Binding="{Binding Qty}"
                                Width="150"/>

                </DataGrid.Columns>

            </DataGrid>
        </StackPanel>

        

       


    </Grid>
</Page>
