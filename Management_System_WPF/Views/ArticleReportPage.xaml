<Page x:Class="Management_System_WPF.Views.ArticleReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Month-Year Title -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- 🔷 TOP BUTTON ROW -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">

            <Button Content="⟵ Back"
                    Width="100" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Back_Click"/>

            <Button x:Name="btnPrevMonth"
        Content="Show Previous Month Sales"
        Width="220" Height="35"
        Background="#3CB4A7"
        Foreground="White"
        FontSize="16"
        Margin="5"
        BorderThickness="0"
        Click="PrevMonth_Click"/>

            <Button x:Name="btnNextMonth"
        Content="Show Next Month Sales"
        Width="220" Height="35"
        Background="#3CB4A7"
        Foreground="White"
        FontSize="16"
        Margin="5"
        BorderThickness="0"
        Click="NextMonth_Click"/>


            <Button Content="Print"
                    Width="120" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="Print_Click"/>

            <Button Content="Export Excel"
                    Width="140" Height="35"
                    Background="#3CB4A7"
                    Foreground="White"
                    Margin="5"
                    Click="ExportExcel_Click"/>
        </StackPanel>

        <!-- 🔷 MONTH - YEAR TITLE -->
        <TextBlock Grid.Row="1"
                   x:Name="txtTitle"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <!-- 🔷 DATA GRID WITH PDF-STYLE COLUMN DESIGN -->
        <DataGrid Grid.Row="2"
          x:Name="dgArticles"
          AutoGenerateColumns="False"
          FrozenColumnCount="1"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          RowHeight="40"
          FontSize="18"
          ColumnHeaderHeight="40"
          AlternationCount="2"
          Background="White"
          BorderBrush="#DDD"
          BorderThickness="1"
          VerticalScrollBarVisibility="Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          SelectionChanged="dgArticles_SelectionChanged">

            <!-- 🔹 HEADER STYLE (same as BuyerReportPage) -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3CB4A7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- 🔹 CELL STYLE (clean + centered) -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="BorderBrush" Value="#DDD"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.CellStyle>

            <!-- 🔹 ROW STYLE (alternate + hover like BuyerReport) -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="18"/>

                    <Style.Triggers>
                        <!-- Alternate row -->
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F3F9F9"/>
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D7EFEA"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>


    </Grid>
</Page>
