<Page x:Class="Management_System_WPF.Views.BuyersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="20">

        <!-- MAIN WHITE PANEL -->
        <Border 
            Background="#EFFFFFFF" 
            CornerRadius="15"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="850">

            <StackPanel>

                <!-- TITLE + EXIT BUTTON -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ADD NEW BUYER"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="✖"
                            Width="35"
                            Height="35"
                            Background="#FF3CB4A7"
                            Foreground="White"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="ExitBuyerPage_Click"/>
                </Grid>

                <!-- INPUT BOX + SAVE BUTTON -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Buyer Name:"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="SemiBold"/>

                    <TextBox x:Name="txtBuyerName"
                             Grid.Column="1"
                             Height="35"
                             FontSize="16"
                             Margin="10,0"
                             Padding="5"/>

                    <Button x:Name="btnSave"
                            Grid.Column="2"
                            Content="Save Buyer"
                            Height="35"
                            Background="#FF3CB4A7"
                            Foreground="White"
                            Click="SaveBuyer_Click"/>
                </Grid>

                <!-- TABLE -->
                <Border Background="#F7F7F7"
                        CornerRadius="10"
                        Padding="10">

                    <DataGrid x:Name="dgBuyers"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              FontSize="16">

                        <DataGrid.Columns>

                            <!-- Serial No -->
                            <DataGridTextColumn Header="S. No."
                                                Width="80"
                                                Binding="{Binding SerialNumber}"/>

                            <!-- Buyer Name -->
                            <DataGridTextColumn Header="Buyer Name"
                                                Width="*"
                                                Binding="{Binding Name}"/>

                            <!-- Options -->
                            <DataGridTemplateColumn Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Width="35"
                                                Height="30"
                                                Padding="5"
                                                Background="#FF3CB4A7"
                                                Click="Options_Click">
                                            <Path Data="M12,2 L14,4 L6,12 L4,12 L4,10 Z"
                                                  Fill="White"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>

                </Border>

            </StackPanel>

        </Border>

    </Grid>

</Page>
